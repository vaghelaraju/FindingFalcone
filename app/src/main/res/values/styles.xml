<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="textViewStyleRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="textViewFooter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/colorLightGrey</item>

    </style>
    <style name="textViewStatus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>